<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
     http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
     http://www.springframework.org/schema/rabbit
     http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.ultrapower.controller"/>

    <!-- 配置rabbitmq服务信息 -->
    <rabbit:connection-factory id="connectionFactory"
                               username="admin" password="admin"
                               host="192.168.245.128" port="5672"/>

    <!--定义rabbit template用于消息的接收和发送 -->
    <rabbit:template id="amqpTemplate"
                     connection-factory="connectionFactory"
                     exchange="exchangeTest"/>
    <rabbit:admin connection-factory="connectionFactory"/>

    <!--定义名称为queueTest的队列-->
    <rabbit:queue name="AssetQueue" />

    <!-- 定义direct类型的交换器，绑定 binding key = queueTest -->
    <rabbit:direct-exchange name="exchangeTest">
        <rabbit:bindings>
            <rabbit:binding queue="AssetQueue" key="AssetQueueKey" />
        </rabbit:bindings>
    </rabbit:direct-exchange>

    <!-- 消息接收者 -->
    <bean id="messageReceiver"
          class="com.ultrapower.controller.AssetQueueConsumer">
    </bean>

    <!--指定队列的订阅端（消息接收端）-->
    <rabbit:listener-container connection-factory="connectionFactory">
        <rabbit:listener queues="AssetQueue" ref="messageReceiver" />
    </rabbit:listener-container>

</beans>