<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="job1" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean class="com.ultrapower.service.Jobs" /><!--任务的集合类-->
        </property>
        <property name="targetMethod" value="job1" /><!--job1：方法名 -->
        <property name="concurrent" value="false" /><!-- 作业不并发调度 -->
    </bean>
    <bean id="job2" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean class="com.ultrapower.service.Jobs" />
        </property>
        <property name="targetMethod" value="job2" /><!--job2：方法名 -->
        <property name="concurrent" value="false" /><!-- 作业不并发调度 -->
    </bean>

    <bean id="cronTrigger1" class=
            "org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="job2" />
        <property name="cronExpression" value="0 28 11 * * ?" />
    </bean>
    <!--<bean id="simpleTrigger1" class=
            "org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="job1" />
        &lt;!&ndash; 调度工厂实例化后，经过0秒开始执行调度 &ndash;&gt;
        <property name="startDelay" value="0" />
        <property name="repeatInterval" value="5000" />&lt;!&ndash; 重复的间隔 &ndash;&gt;
        <property name="repeatCount" value="10"/>
    </bean>-->

    <!--配置调度工厂 -->
    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cronTrigger1" />
            </list>
        </property>
    </bean>
</beans>